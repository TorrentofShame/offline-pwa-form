{
  "name": "offline-pwa-form",
  "version": "1.0.0",
  "description": "An offline-first PWA that uses a config file to create the form and stores submissions until an internet connection is established, where it then uploads the form submissions to the specified location.",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=dev webpack serve --hot --env dev --progress",
    "build": "npm run build:prod",
    "build:prod": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=dev webpack",
    "serve": "cross-env NODE_ENV=production webpack serve",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest src --config=./config/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/torrentofshame/offline-pwa-form.git"
  },
  "keywords": [
    "PWA",
    "React",
    "Bootstrap",
    "Webpack",
    "Offline"
  ],
  "author": "Simon Weizman <simon@torrentofshame.com>",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.11",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "check-prop-types": "^1.1.2",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^7.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-webpack-plugin": "^2.5.3",
    "glob": "^7.1.6",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "prop-types": "^15.7.2",
    "purgecss-webpack-plugin": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.1.2",
    "yaml-loader": "^0.6.0"
  }
}
